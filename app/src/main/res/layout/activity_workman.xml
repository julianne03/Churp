<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Food_list.workman">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="178dp"
        android:layout_height="120dp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        android:src="@drawable/kingkong" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kingkong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/maruburiregular"
            android:text="가게명 : 킹콩부대찌개"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/kingadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/maruburiregular"
            android:text="주소 : 서울 관악구 신림로59길 15-12"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/kingnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/maruburiregular"
            android:text="전화번호 : 0507-1404-8046"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_sweet"
            android:fontFamily="@font/maruburiregular"
            android:text="#한식"
            android:textSize="20dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_sweet"
            android:fontFamily="@font/maruburiregular"
            android:text="#햄이 가득가득!!"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>