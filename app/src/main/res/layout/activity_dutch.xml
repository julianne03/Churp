<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".DutchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburiregular"
            android:text="@string/people"/>

        <EditText
            android:id="@+id/et_people_num"
            android:layout_width="200dp"
            android:layout_margin="20dp"
            android:inputType="number"
            android:textSize="22sp"
            android:textAlignment="center"
            android:background="@drawable/button_round_lightpink"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburiregular"
            android:text="@string/money"/>

        <EditText
            android:id="@+id/et_total_money"
            android:layout_width="200dp"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textSize="22sp"
            android:background="@drawable/button_round_lightpink"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical" />

        <Button
            android:id="@+id/goDutch"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="#D6DC9B"
            android:fontFamily="@font/maruburiregular"
            android:text="똑똑"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="1인당 "/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="원"/>

    </LinearLayout>

</LinearLayout>